<div class='container'>
<div class='col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4'>
<form action='login' method='post'>
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <h2 class="text-center">New Entry</h2>
    <br>
    <div class="form-group">
      <label for="client">Client:</label>
      <select class="form-control" id="client" placeholder='select client...'>
        <option value="" disabled selected>Select the client...</option>
        <%@user.assignments.each do |assignment|%>
            <option value='<%=assignment.client.id%>'><%=assignment.client.name%></option>
        <%end%>
      </select>
    </div>
    <br>
    <div class="form-group">
      <label for="project">Project:</label>
      <select class="form-control" id="project">
        <option value="" disabled selected>Select the project...</option>
      </select>
    </div>
    <br>
    <div class="form-group">
      <label for="activity">Activity:</label>
      <select class="form-control" id="activity">
        <option value="" disabled selected>Select the activity...</option>
      </select>
    </div>
    <br>
    <div class="form-group">
      <label for="date">Date:</label>
      <select class="form-control" id="date">
        <%@today=Date.today%>
        <%5.times do%>
            <option><%=@today%></option>
            <%@today-=1%>
        <%end%>
      </select>
    </div>
    <br>
    <div class="form-group">
      <label for="hours">Hours:</label>
      <select class="form-control" id="hours">
        <%@hours=0%>
        <%100.times do%>
            <option><%=@hours+=0.5%></option>
        <%end%>
      </select>
    </div>
    <br>
    <div class='text-center'><button class="btn btn-block btn-primary" type="submit">Submit</button></div>
</form>
</div>
</div>
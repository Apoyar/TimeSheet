<div class='container-fluid'>

<table class="table">

<tr>
    <form action='' method='get' id='list_task_form'>
        <th>
            <label for="sU" class="sr-only">User:</label>
            <input name='search[user]' type="text" id="sU" class="form-control" placeholder='Filter by user...'>
        </th> 
            
        <th>
            <label for="sC" class="sr-only">Client:</label>
            <input name='search[client]' type="text" id="sC" class="form-control" placeholder='Filter by client...'>
        </th> 
        
        <th>
            <label for="sP" class="sr-only">Project:</label>
            <input name='search[project]' type="text" id="sP" class="form-control" placeholder='Filter by project...'>
        </th> 
        
        <th>
            <label for="sA" class="sr-only">Activity:</label>
            <input name='search[activity]' type="text" id="sA" class="form-control" placeholder='Filter by activity...'>
        </th> 
        
        <th>
            <button type='submit' class="btn btn-success"><span class='glyphicon glyphicon-search'></span></button>
        </th> 
        
        <th>
            TOTAL HOURS<br>
            <%=@hours%>
        </th> 
            
        <th>
            <a href='<%=request.original_url.sub! '/admin/list_tasks', '/admin/list_tasks.csv'%> ' class="btn btn-success"><span class='glyphicon glyphicon-file'></span>CSV</button>
        </th>
    </form>
</tr>

<tr>
        <th>
            User
        </th> 
            
        <th>
            Client
        </th> 
        
        <th>
            Project
        </th> 
        
        <th>
            Activity
        </th> 
        
        <th>
            Date
        </th> 
        
        <th>
            Hours
        </th> 
            
        <th>
            Notes
        </th>
        
    
</tr>
<%if @tasks%>
<%@tasks.each do |task|%>
<tr>
    <td><%=task.user.handle%></td>
    <td><%=task.client.name%></td>
    <td><%=task.project.name%></td>
    <td><%=task.activity.name%></td>
    <td><%=task.date%></td>
    <td><%=task.hours%></td>
    <td>
        <!-- Button trigger modal -->
        <button class="btn btn-default" data-toggle="modal" data-target="#notes<%=task.id%>"><span class='glyphicon glyphicon-file'></span></button>
        <!-- Modal -->
        <div class="modal fade" id="notes<%=task.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Notes</h4>
              </div>
              <div class="modal-body">
                  <%=task.notes%>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>
    </td>
    <td>
        <!-- Button trigger modal -->
        <button class="btn btn-warning" data-toggle="modal" data-target="#edit<%=task.id%>">Edit</button>
        <!-- Modal -->
        <div class="modal fade" id="edit<%=task.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit task</h4>
              </div>
              <form action='edit_task' method='post'>
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                <input name="task[id]" value="<%=task.id%>" type="hidden">
              <div class="modal-body">
                  
                  <div class="form-group">
                    <label for="date">Date:</label>
                    <input type='date' name='task[date]' class="form-control" id="date" value='<%=task.date%>'>
                  </div>
                  <br>
                  
                  <div class="form-group">
                    <label for="hours">Hours:</label>
                    <select name='task[hours]' class="form-control" id="hours">
                      <%@hours=0%>
                      <%100.times do%>
                          <%if @hours==task.hours-0.5%>
                            <option value='<%=@hours+=0.5%>' selected><%=@hours%></option>
                          <%else%>
                            <option value='<%=@hours+=0.5%>'><%=@hours%></option>
                          <%end%>
                      <%end%>
                    </select>
                  </div>
                  <br>
                  
                  <div class="form-group">
                    <label for="notes">Notes:</label>
                    <textarea name='task[notes]' class="form-control" id="notes" style='resize: none; height: 100px;' placeholder='Enter any task specific notes here...' cols='10'><%=task.notes%></textarea>
                  </div>
                  
                  
              </div>
              <div class="modal-footer">
                
                <button type='submit' class="btn btn-primary">Save</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                
              </div>
              </form>
            </div>
          </div>
        </div>
    </td>
    <td>
        <button class="btn btn-danger btn-fill" data-toggle="modal" data-target="#delete<%=task.id%>">Delete</button>
        <!-- Modal -->
        <div class="modal fade" id="delete<%=task.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete task</h4>
              </div>
              <div class="modal-body">
                  Are you sure?
              </div>
              <div class="modal-footer">
                <form class="form-inline" action='delete_task' method='post'>
                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                    <input name="task_id" value="<%=task.id%>" type="hidden">
                    <button type='submit' class="btn btn-danger">Yes</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </form>
                
              </div>
            </div>
          </div>
        </div>
    </td>
</tr>
<%end%>
<%end%>
</table>
<br>
</div>